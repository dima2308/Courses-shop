<h1>Корзина</h1>

<div id="card">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>{{price}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><b class="summary">Общая стоимость:</b><span class="price">{{price}}</span></p>

    <form class="order-form" action="/orders" method="POST">
        <input type="hidden" name="_csrf" value={{csrf}}>
        <button type="submit" class="btn red">Сделать заказ</button>
    </form>

    <form action="/" method="DELETE">
        <input type="hidden" name="_csrf" value={{csrf}}>
        <button name="clear" id="clear" class="btn">Очистить корзину</button>
    </form>
    
</div>
{{else}}
    <p>Корзина пуста</p>
{{/if}}
